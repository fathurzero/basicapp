<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tiga"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.okedroid.fathur.basicapp.ActivityTiga">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/lake"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription"/>
    <TextView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quotes3"
        android:textColor="#EDE7F6"
        android:fontFamily="Roboto"
        android:textStyle="italic"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/figure3"
        android:textSize="20sp"
        android:textColor="#D1C4E9"
        android:id="@+id/textView3"
        android:layout_below="@+id/image"
        android:layout_alignLeft="@+id/image"
        android:layout_alignStart="@+id/image"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="14dp"/>

<Button
    android:layout_width="72dp"
    android:layout_height="72dp"
    android:background="@drawable/ic_kiri"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:onClick="pindahLayarKiri"

    tools:ignore="RtlHardcoded"/>

</RelativeLayout>
