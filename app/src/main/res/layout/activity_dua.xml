<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dua"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.okedroid.fathur.basicapp.ActivityDua">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/lake"
        android:scaleType="centerCrop"
        android:largeHeap="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="20sp"
        android:text="Work hard in silence, \nLet your success be your noise."
        android:textStyle="italic"
        android:id="@+id/textView"
        android:layout_marginTop="89dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="by Frank Ocean"
        android:textColor="#fff"
        android:textStyle="italic"
        android:textSize="19sp"
        android:layout_marginTop="20dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="89dp"
        android:layout_marginEnd="89dp"/>

    <Button
        android:id="@+id/btn2"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="@drawable/ic_kiri"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="pindahLayarKiri"

        />

    <Button
        android:id="@+id/btn3"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="@drawable/ic_kanan"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="pindahLayarKanan"
        />


</RelativeLayout>
