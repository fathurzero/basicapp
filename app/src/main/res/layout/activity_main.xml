<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.okedroid.fathur.basicapp.MainActivity">
    <!-- basic app -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/lake"
        android:scaleType="centerCrop"
        android:contentDescription="@string/imageDesc"
        tools:ignore="ContentDescription"
        android:id="@+id/imageView"/>

    <Button
        android:id="@+id/btn3"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="@drawable/ic_kanan"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="pindahLayar"
        tools:ignore="RtlHardcoded"/>

    <TextView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quotes1"
        android:textColor="#EDE7F6"
        android:fontFamily="Roboto"
        android:textStyle="italic"
        android:textSize="25sp"
        android:layout_marginTop="24dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/figure1"
        android:textSize="20sp"
        android:textColor="#D1C4E9"
        android:layout_marginTop="20dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/image"
        android:layout_toLeftOf="@+id/btn3"
        android:layout_toStartOf="@+id/btn3"/>
</RelativeLayout>
