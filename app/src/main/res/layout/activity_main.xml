<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.okedroid.fathur.basicapp.MainActivity">
    <!-- basic app -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/lake"
        android:scaleType="centerCrop"
        android:id="@+id/imageView"/>

    <Button
        android:id="@+id/btn1"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:background="@drawable/ic_kanan"
        android:onClick="pindahLayar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"


        />

    <TextView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Learn from yesterday,\nLive for today,\nHope for tomorrow"
        android:textColor="#EDE7F6"
        android:fontFamily="Roboto"
        android:textStyle="italic"
        android:textSize="25dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="by Albert Einstein"
        android:textSize="20dp"
        android:textColor="#D1C4E9"
        android:id="@+id/textView3"
        android:layout_below="@+id/image"
        android:layout_alignLeft="@+id/image"
        android:layout_alignStart="@+id/image"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="14dp"/>

</RelativeLayout>
